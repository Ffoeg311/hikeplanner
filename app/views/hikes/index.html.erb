<p id="notice"><%= notice %></p>

<h1>Hikes</h1>

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Title</th>      
      <th>Commute hours</th>
      <th>Location</th>
      <th>Nearest town</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hikes.each do |hike| %>
      <tr>
        <td>
          <%= link_to link.title, "http://#{hike.link}" %>

        </td>
        <td><%= hike.commute_hours %></td>
        <td><%= hike.location %></td>
        <td><%= hike.nearest_town %></td>
        <td><%= link_to 'Show', hike %></td>
        <td><%= link_to 'Edit', edit_hike_path(hike) %></td>
        <td><%= link_to 'Destroy', hike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Hike', new_hike_path %>
